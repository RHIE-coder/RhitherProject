{
   "name": "rhither-nft",
   "version": "1.0.0",
   "description": "ethereum-based blockchain network",
   "main": "index.js",
   "keywords": [
      "ethereum",
      "nft"
   ],
   "scripts": {
      "start": "ts-node src/app.ts",
      "build": "rm -rf dist && tsc",
      "build:run": "rm -rf dist && tsc && node dist/src/app.js",
      "ts:run": "ts-node src/app.ts",
      "nodemon": "nodemon --watch 'src/**/*.ts' --exec \"ts-node\" src/app.ts",
      "test": "ts-mocha test/**/*.spec.ts",
      "nyc:run": "nyc ts-mocha test/**/*.spec.ts",
      "eslint:init": "eslint --init",
      "eslint:fix": "eslint src/**/*.ts --fix",
      "typeorm": "typeorm-ts-node-commonjs"
   },
   "author": "rhie-coder",
   "license": "MIT",
   "devDependencies": {
      "@types/chai": "^4.3.1",
      "@types/express": "^4.17.13",
      "@types/mocha": "^9.1.1",
      "@types/node": "^17.0.33",
      "@types/sqlite3": "^3.1.8",
      "@types/web3": "^1.2.2",
      "@typescript-eslint/eslint-plugin": "^5.23.0",
      "@typescript-eslint/parser": "^5.23.0",
      "chai": "^4.3.6",
      "eslint": "^8.15.0",
      "eslint-config-prettier": "^8.5.0",
      "eslint-plugin-prettier": "^4.0.0",
      "mocha": "^10.0.0",
      "nodemon": "^2.0.16",
      "nyc": "^15.1.0",
      "prettier": "^2.6.2",
      "ts-mocha": "^10.0.0",
      "ts-node": "^10.7.0",
      "typescript": "^4.6.4"
   },
   "nyc": {
      "extension": [
         ".ts"
      ],
      "exclude": [
         "**/*.d.ts",
         "coverage/**/*",
         "dist/**/*"
      ],
      "reporter": [
         "html"
      ],
      "all": true
   },
   "dependencies": {
      "express": "^4.18.1",
      "sqlite3": "^5.0.8",
      "typeorm": "^0.3.6",
      "web3": "^1.7.3"
   }
}
